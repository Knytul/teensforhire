        <input type="text" id="jobWhen" name="When" placeholder="Enter when">
        <br>

        <label for="jobWhere">Where:</label>
        <input type="text" id="jobWhere" name="Where" placeholder="Enter where">
        <br>

        <label for="teenCount">How many teens:</label>
